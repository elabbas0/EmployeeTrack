@model IEnumerable<EmployeeTrack.Models.Entities.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<p>
    <a asp-controller="Employees" asp-action="Create" class="btn btn-primary">Create New Employee</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Full name</th>
            <th>Position</th>
            <th>Start date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.FirstName @employee.LastName</td>
                <td>@employee.Position?.Name</td>
                <td>@employee.StartDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>